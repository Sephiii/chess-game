{
  "name": "chess-game",
  "version": "1.0.0",
  "description": "Jeu d'Ã©checs en TypeScript",
  "main": "dist/main.js",
  "scripts": {
    "clean": "rimraf --glob dist/*",
    "copy-html": "copyfiles -u 1 src/index.html dist/",
    "copy-css": "copyfiles -u 1 src/css/**/*.css dist/",
    "copy": "npm run copy-html && npm run copy-css",
    "build": "npm run clean && tsc && npm run copy",
    "watch:ts": "tsc -w",
    "watch:serve": "lite-server",
    "dev": "npm run build && concurrently \"npm run watch:ts\" \"npm run watch:serve\""
  },
  "author": "",
  "license": "MIT",  
  "devDependencies": {
    "@types/node": "^18.15.11",
    "concurrently": "^8.0.1",
    "copyfiles": "^2.4.1",
    "lite-server": "^2.6.1",
    "rimraf": "^5.0.0",
    "typescript": "^5.0.4"
  }
}